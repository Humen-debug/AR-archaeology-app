{
  "extends": "expo/tsconfig.base",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@app/*": ["./app/*"],
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],
      "@providers": ["./providers"],
      "@providers/*": ["./providers/*"],
      "@models": ["./models"],
      "@models/*": ["./models/*"]
    }
  },

  "include": ["./**/*", "./types/custom.d.ts", "**/*.ts", "**/*.tsx"]
}
